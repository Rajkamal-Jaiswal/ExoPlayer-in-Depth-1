<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aakash.databindingtest">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DataBindingTest"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".swipeViewpager.SwipeTestActivity"
            android:exported="false" />
        <activity
            android:name=".ytplayer.YoutubeVideoPlayer"
            android:exported="false" />
        <activity
            android:name=".CustomMediaPlayerActivity"
            android:configChanges="orientation|keyboard|screenSize"
            android:exported="true" />
        <activity
            android:name=".StyledPlayerActivity"
            android:exported="true" /> <!-- <activity -->
        <!-- android:name=".VideoPlayerActivity" -->
        <!-- android:exported="true" /> -->
        <activity
            android:name=".VideoPlayerActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.DataBindingTest.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>